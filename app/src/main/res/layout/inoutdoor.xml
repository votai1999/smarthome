<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Indoor"
            android:padding="8dp"
            android:textSize="21dp"
            android:background="#132b46"
            android:textColor="#fff"
            android:elevation="5dp"/>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/icon_temp"/>
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/txtTempIndoor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temp: 25°C"
                    android:textSize="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/icon_hum"/>
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/txtHumIndoor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hum: 60%"
                    android:textSize="20dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/icon_gas"/>
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/txtGasIndoor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gas: --ppm"
                    android:textSize="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Outdoor"
            android:padding="8dp"
            android:textSize="21dp"
            android:background="#132b46"
            android:textColor="#fff"
            android:elevation="5dp"/>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_temp" />
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/txtTempOutdoor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temp: 25°C"
                    android:textSize="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="37dp"
                    android:layout_height="43dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_hum" />
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/txtHumOutdoor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hum: 60%"
                    android:textSize="20dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="57dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="58dp"
                    android:layout_height="47dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_cloud" />

                <TextView
                    android:id="@+id/txtCloudOutdoor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Cloud: --%"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="61dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_wind" />
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/txtWindOutdoor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wind: --m/s"
                    android:textSize="20dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="42dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_pressure" />
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/txtPressureOutdoor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pressure: ---hpa"
                    android:textSize="20dp"/>

            </LinearLayout>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_dust" />

            <TextView
                android:id="@+id/txtDustIndoor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Dust: --mg/m3"
                android:textSize="20dp" />

            <!--<LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/icon_hum"/>
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/txtHumIndoor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hum: 60%"
                    android:textSize="20dp"/>
            </LinearLayout>-->
        </LinearLayout>
    </LinearLayout>
</ScrollView>